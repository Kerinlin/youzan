.container {
    width: 100%;
    height: 100vh;
}

.Map {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 200rpx;
    background-color: #fff;
}

.detail {
    display: block;
    width: 100%;
    float: left;
    padding-left: 15rpx;
    padding-top: 20rpx;
    bottom: 30rpx;
    word-wrap: break-word;
    font-size: 17px;
    color: #020202;
}