.container {
    width: 100%;
    height: 100%;
}

.header {
    margin-top: 50rpx;
    padding-left: 15px;
    height: 210rpx;
    border-bottom: 1rpx solid #eeeeee;
}

.posName {
    font-size: 25px;
    color: #313131;
}

.salary {
    float: left;
    text-align: left;
}

.aed {
    font-size: 15px;
    color: #151515;
}

.dec {
    padding-top: 10rpx;
    font-size: 13px;
    color: #989898;
}

.address {
    color: #313131;
    border-bottom: 20rpx solid #f8f9fb;
    font-size: 14px;
}

.weui-loadmore__tips_in-line {
    padding: 0 2em;
    color: #6e6e6f;
}

.jobdec {
    border-bottom: 20rpx solid #f8f9fb;
}

.jobdec .tag {
    width: 100%;
    height: 1000rpx;
}
.right{
    flex: none;
}

.hr {
    position: relative;
    height: 350rpx;
    border-bottom: 20rpx solid #f8f9fb;
}

.avatar {
    width: 175rpx;
    height: 175rpx;
}

.title {
    position: absolute;
    left: 165rpx;
    top: 118rpx;
    font-size: 18px;
    color: #333333;
}

.server {
    position: absolute;
    left: 305rpx;
    top: 126rpx;
    font-size: 15px;
    color: #333333;
}

.active {
    position: absolute;
    left: 162rpx;
    top: 182rpx;
    width: 30rpx;
    height: 30rpx;
}

.activeTitle {
    position: absolute;
    left: 217rpx;
    top: 182rpx;
    color: #656565;
    font-size: 13px;
}

.titleTag {
    position: absolute;
    left: 25rpx;
    top: 260rpx;
    font-size: 14px;
    color: #656565;
}

.listContainer {
    width: 100%;
    height: 100%;
}

.more {
    position: relative;
    height: 100rpx;
}

.more-dec {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: #7f7f7f;
    font-size: 14px;
}

.more-dec-img {
    position: absolute;
    width: 11px;
    height: 11px;
    left: 62%;
    top: 38%;
}

.footer {
    position: relative;
    height: 200rpx;
    width: 100%;
    margin-bottom: 80rpx;
}

.support {
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666666;
}

.addProgram {
    position: absolute;
    left: 50%;
    top: 33%;
    transform: translateX(-50%);
    white-space: nowrap;
    font-size: 14px;
    color: #313131
}

.footer:after {
    content: "";
    position: absolute;
    width: 400rpx;
    left: 50%;
    top: 53%;
    right: 0;
    transform: translateX(-50%);
    border-top: 2rpx solid #0a0a0a;
}

.posControl {
    position: fixed;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    background-color: #fff;
}

.footerBar {
    position: relative;
    width: 100%;
    height: 200rpx;
}

.share {
    position: absolute;
    width: 33rpx;
    height: 38rpx;
    left: 66rpx;
    bottom: 56rpx;
}

.shareText {
    position: absolute;
    font-size: 11px;
    color: #989898;
    left: 59rpx;
    bottom: 10rpx;
}

.saveText {
    position: absolute;
    font-size: 11px;
    color: #989898;
    left: 138rpx;
    bottom: 10rpx;
}

.save {
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    left: 143rpx;
    bottom: 48rpx;
}

.weui-btn {
    position: absolute;
    width: 67%;
    bottom: 10rpx;
    right: 25rpx;
}